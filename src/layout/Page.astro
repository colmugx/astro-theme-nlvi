---
import BaseHead from '../component/BaseHead.astro'
import PageHeader from '../component/PageHeader.astro'

type Props = {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <PageHeader />
    <slot />
  </body>
</html>
