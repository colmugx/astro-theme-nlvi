---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../component/BaseHead.astro'
import Header from '../component/Header.astro'
import Footer from '../component/Footer.astro'
import FormattedDate from '../component/FormattedDate.astro'
import PageHeader from 'src/component/PageHeader.astro'

type Props = CollectionEntry<'blog'>['data']

const { title, description, date, pubDate, updatedDate } = Astro.props
const _date = date || pubDate

---

<html lang="en">
  <head>
    <BaseHead title={title} description={description!} />
  </head>

  <body>
    <PageHeader />
    <Header />
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={_date!} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1 class="text-7xl">{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
