---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  isActive?: boolean
}

const { href, class: className, isActive, ...props } = Astro.props
---

<a
  href={href}
  class:list={[
    'pt-2 font-texture font-bold leading-none text-gray-300 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-300',
    className,
    { 'text-gray-800': isActive },
  ]}
  {...props}
>
  <slot />
</a>
