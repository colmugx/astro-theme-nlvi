---
type Props = {
  title: string
  subTitle?: string
}

const { title, subTitle } = Astro.props
---

<div class="px-36 pt-32">
  <div class="flex flex-col font-bold uppercase">
    <span class="my-4 text-gray-400 text-xl">{subTitle || 'Index'}</span>
    <h1 class="font-texture text-9xl uppercase text-main">{title}</h1>
  </div>
</div>
