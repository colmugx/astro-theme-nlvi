---
type Props = {
  title: string
  subTitle?: string
}

const { title, subTitle } = Astro.props
---

<div class="px-36 pt-32" aria-label="Category Title">
  <div class="flex flex-col font-bold uppercase">
    <span class="my-4 text-xl text-gray-400" aria-label="Subtitle">{subTitle || 'Index'}</span>
    <h1 class="font-texture text-9xl uppercase text-main" aria-label="Title">{title}</h1>
  </div>
</div>
