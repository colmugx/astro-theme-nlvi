---
import '../style/global.css'
import { ViewTransitions } from 'astro:transitions';
import OPMeta from '../meta/open-graph.astro'
import TwitterMeta from '../meta/twitter.astro'

interface Props {
  title: string
  description: string
  image?: string
  keywords?: string[]
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const { title, description, keywords, image } = Astro.props
---

<ViewTransitions />

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/AmericanCaptain.ttf" as="font" type="font/ttf" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<meta name="title" content={title} />
<meta name="description" content={description} />
{keywords && <meta name="keywords" content={keywords.join(',')} />}

<OPMeta title={title} description={description} image={image} />
<TwitterMeta title={title} description={description} image={image} />

<title>{title}</title>
