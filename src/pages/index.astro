---
import MainLayout from '../layouts/Main.astro'

import BaseHead from '../component/BaseHead.astro'
import PageHeader from '../component/PageHeader.astro'
import Header from '../component/Header.astro'
import Footer from '../component/Footer.astro'

import Post from '../component/Post.astro'

import { SITE_TITLE, SITE_DESCRIPTION } from '@constant/app'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog')).sort((a, b) => {
  const prevDate = a.data.date || a.data.pubDate
  const nextDate = b.data.date || b.data.pubDate
  return nextDate!.valueOf() - prevDate!.valueOf()
})
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <PageHeader />
    <Header />
    <MainLayout>
      <section>
        {posts.map(post => <Post post={post} />)}
      </section>
    </MainLayout>
    <Footer />
  </body>
</html>
